{
  "name": "linter-spell",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Linter plugin for Atom using ispell compatible interface such as aspell, hunspell, enchant, etc.",
  "keywords": [
    "lint",
    "linter",
    "spelling",
    "spellcheck"
  ],
  "repository": "https://github.com/yitzchak/linter-spell",
  "license": "MIT",
  "engines": {
    "atom": "*"
  },
  "bugs": {
    "url": "https://github.com/yitzchak/linter-spell/issues"
  },
  "dependencies": {
    "os-locale": "*",
    "lodash": "*",
    "atom-package-deps": "*"
  },
  "package-deps": [
    "linter",
    "intentions"
  ],
  "configSchema": {
    "spellPath": {
      "title": "Spell Path",
      "description": "The path to your copy of Ispell compatible program such as aspell, hunspell, etc.",
      "type": "string",
      "default": "hunspell",
      "order": 1
    },
    "defaultDictionaries": {
      "title": "Default Dictionaries",
      "description": "Default dictionaries used to check spelling. If not specified will default to the current locale.",
      "type": "array",
      "default": [],
      "order": 2
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "atom",
      "latex",
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise"
    ]
  },
  "consumedServices": {
    "linter-spell-grammar": {
      "versions": {
        "1.0.0": "consumeGrammar"
      }
    },
    "linter-plus-self": {
      "versions": {
        "0.1.0": "consumeLinter"
      }
    }
  },
  "providedServices": {
    "linter-spell-grammar": {
      "versions": {
        "1.0.0": "provideGrammar"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    },
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
