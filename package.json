{
  "name": "linter-spell",
  "main": "./lib/main",
  "version": "0.8.1",
  "description": "Multilingual grammar-specific spell checking using Ispell-interface such as Aspell or Hunspell.",
  "author": "Tarn Burton <twburton@gmail.com>",
  "keywords": [
    "linter",
    "spell-check",
    "asciidoc",
    "markdown"
  ],
  "repository": "https://github.com/yitzchak/linter-spell",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0"
  },
  "bugs": {
    "url": "https://github.com/yitzchak/linter-spell/issues"
  },
  "dependencies": {
    "os-locale": "^1.4.0",
    "lodash": "^4.13.0",
    "atom-package-deps": "^4.0.0",
    "language-tags": "^1.0.0",
    "atom-linter": "^7.0.0",
    "atom-space-pen-views": "^2.2.0"
  },
  "devDependencies": {
    "xml2js": "^0.4.0",
    "jsonfile": "^2.3.0",
    "semver": "^5.3.0"
  },
  "package-deps": [
    "linter",
    "intentions"
  ],
  "configSchema": {
    "spellPath": {
      "title": "Spell Path",
      "description": "The path to your copy of Ispell compatible program such as aspell, hunspell, etc.",
      "type": "string",
      "default": "hunspell",
      "order": 1
    },
    "defaultLanguages": {
      "title": "Default Languages",
      "description": "Default languages used to check spelling. If not specified will default to the current locale.",
      "type": "array",
      "default": [],
      "order": 2
    },
    "personalDictionaryPath": {
      "title": "Personal Dictionary Path",
      "description": "The path to your personal dictionary.",
      "type": "string",
      "default": "",
      "order": 3
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "atom",
      "latex",
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise",
      "HTMLDivElement"
    ]
  },
  "consumedServices": {
    "linter-spell-grammar": {
      "versions": {
        "1.0.0": "consumeGrammar"
      }
    },
    "linter-plus-self": {
      "versions": {
        "0.1.0": "consumeLinter"
      }
    },
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "providedServices": {
    "linter-spell-grammar": {
      "versions": {
        "1.0.0": "provideGrammar"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    },
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
