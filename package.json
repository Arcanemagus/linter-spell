{
  "name": "linter-spell",
  "main": "./lib/main",
  "version": "0.0.0",
  "description": "Linter plugin for Atom using hunspell. Checks the spelling of TeX, LaTeX, HTML, SGML, XML and plain text files.",
  "keywords": [
    "html",
    "sgml",
    "xml",
    "tex",
    "latex",
    "lint",
    "linter"
  ],
  "activationCommands": [],
  "repository": "https://github.com/yitzchak/linter-spell",
  "license": "MIT",
  "engines": {
    "atom": "*"
  },
  "bugs": {
    "url": "https://github.com/yitzchak/linter-spell/issues"
  },
  "dependencies": {
    "os-locale": "*",
    "lodash": "*"
  },
  "package-deps": [
    "linter",
    "intentions"
  ],
  "configSchema": {
    "hunspellPath": {
      "title": "Hunspell Path",
      "description": "The full path to your copy of Hunspell.",
      "type": "string",
      "default": "hunspell",
      "order": 1
    },
    "defaultDictionaries": {
      "title": "Default Dictionaries",
      "description": "Default dictionaries used to check spelling. If not specified will default to the current locale.",
      "type": "array",
      "default": [],
      "order": 2
    },
    "texEnable": {
      "type": "boolean",
      "default": true,
      "order": 3
    },
    "texGrammarScopes": {
      "title": "TeX Grammar Scopes",
      "description": "The grammar scopes to use for TeX spell checking.",
      "type": "array",
      "default": ["text.tex", "text.tex.latex"],
      "order": 4
    },
    "htmlEnable": {
      "type": "boolean",
      "default": true,
      "order": 5
    },
    "htmlGrammarScopes": {
      "title": "HTML Grammar Scopes",
      "description": "The grammar scopes to use for HTML spell checking.",
      "type": "array",
      "default": ["text.html.basic"],
      "order": 6
    },
    "xmlEnable": {
      "type": "boolean",
      "default": true,
      "order": 7
    },
    "xmlGrammarScopes": {
      "title": "XML Grammar Scopes",
      "description": "The grammar scopes to use for XML spell checking.",
      "type": "array",
      "default": ["text.xml"],
      "order": 8
    },
    "plainEnable": {
      "title": "Plain Text Enable",
      "type": "boolean",
      "default": true,
      "order": 9
    },
    "plainGrammarScopes": {
      "title": "Plain Text Grammar Scopes",
      "description": "The grammar scopes to use for Plain Text spell checking.",
      "type": "array",
      "default": ["text.plain"],
      "order": 10
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "atom",
      "latex",
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise"
    ]
  },
  "consumedServices": {
    "linter-spell:grammar": {
      "versions": {
        "1.0.0": "consumeGrammar"
      }
    },
    "linter-plus-self": {
      "versions": {
        "0.1.0": "consumeLinter"
      }
    }
  },
  "providedServices": {
    "linter-spell:grammar": {
      "versions": {
        "1.0.0": "provideGrammar"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    },
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
